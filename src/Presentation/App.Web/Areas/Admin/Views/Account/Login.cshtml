@model App.Web.Areas.Admin.Models.Account.LoginModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_UnAuthorizeLayout.cshtml";
    ViewBag.Title = "Login";
}



<div class="login-box">
    <div class="login-logo">
        <b>Admin</b>
    </div>

    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form asp-controller="Account" asp-action="Login" method="post" id="account-form">
                <div asp-validation-summary="ModelOnly" class="message-error"></div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" autofocus="autofo
cus" placeholder="Email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="form-group">
                    <div class="input-group mb-3">
                        <input asp-for="Password" class="form-control" autofocus="autofocus" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="error"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="RememberMe" />
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>

