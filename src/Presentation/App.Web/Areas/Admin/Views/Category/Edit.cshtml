@model CategoryModel
@{
    //page title
    ViewBag.Title = "Edit category details";
    //active menu item (system name)
    //Html.SetActiveMenuItemSystemName("Categories");
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Category" asp-action="Edit" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit category details - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">back to category list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="button" onclick="javascript:OpenWindow('@Url.RouteUrl("Category", new {SeName = Model.Name})', 800, 600, true); return false;" class="btn bg-purple">
                <i class="fa fa-eye"></i>
                Preview
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save and Continue Edit
            </button>
            <span id="category-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Delete
            </span>
            
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<app-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-delete" />